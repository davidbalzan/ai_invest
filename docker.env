# Database Configuration for Docker
DATABASE_URL=postgresql://ai_user:ai_password@localhost:5432/ai_investment
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_investment
DB_USER=ai_user
DB_PASSWORD=ai_password

# Application Configuration
ENVIRONMENT=development
DEBUG=true

# API Keys (copy from your main .env file)
# OPENAI_API_KEY=your_openai_api_key_here
# FINNHUB_API_KEY=your_finnhub_api_key_here

# Cache Configuration
CACHE_ENABLED=true
CACHE_BACKEND=postgresql
CACHE_DEFAULT_TTL=3600

# Timezone Configuration
DEFAULT_TIMEZONE=America/New_York
MARKET_TIMEZONE=America/New_York

# Report Configuration
REPORT_OUTPUT_DIR=./reports
REPORT_TEMPLATE_DIR=./templates

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json 